{
  "compilerOptions": {
    "target": "ES2017",
    "incremental": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "lib": ["es2017"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
